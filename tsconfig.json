{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "rootDir": "src",
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": "."
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
